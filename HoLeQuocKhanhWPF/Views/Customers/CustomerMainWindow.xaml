<Window x:Class="HoLeQuocKhanhWPF.Views.Customers.CustomerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Portal" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{StaticResource SecondaryBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="{Binding WelcomeMessage}" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                <Button Content="My Profile" Command="{Binding ShowProfileCommand}" Margin="10"/>
                <Button Content="Booking History" Command="{Binding ShowBookingHistoryCommand}" Margin="10"/>
                <Button Content="Book a Room" Command="{Binding BookRoomCommand}" Margin="10"/>
            </StackPanel>

            <Button Grid.Row="1" Content="Logout" 
                    Command="{Binding LogoutCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Margin="10" VerticalAlignment="Bottom"/>
        </Grid>

        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" Margin="10"/>
    </Grid>
</Window>