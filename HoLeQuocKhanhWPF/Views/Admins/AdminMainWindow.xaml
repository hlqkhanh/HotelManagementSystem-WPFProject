<Window x:Class="HoLeQuocKhanhWPF.Views.Admins.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource SecondaryBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{StaticResource LightBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
                <TextBlock Text="ADMIN PANEL" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource LightBrush}" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="10,20,10,10">
                <Button Content="Customer Management" Command="{Binding ShowCustomerManagementCommand}" Margin="5,10"/>
                <Button Content="Room Management" Command="{Binding ShowRoomManagementCommand}" Margin="5,10"/>
                <Button Content="Report Statistics" Command="{Binding ShowReportCommand}" Margin="5,10"/>
            </StackPanel>

            <Button Grid.Row="2" Content="Logout" 
                    Command="{Binding LogoutCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Margin="15" VerticalAlignment="Bottom"
                    Background="{StaticResource AccentBrush}">
            </Button>
        </Grid>

        <Border Grid.Column="1" BorderThickness="2,0,0,0" BorderBrush="{StaticResource BorderBrush}">
            <ContentControl Content="{Binding CurrentViewModel}" Margin="15"/>
        </Border>
    </Grid>
</Window>