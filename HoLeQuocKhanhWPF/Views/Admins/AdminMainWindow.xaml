<Window x:Class="HoLeQuocKhanhWPF.Views.Admins.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{StaticResource SecondaryBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Button Content="Customer Management" Command="{Binding ShowCustomerManagementCommand}" Margin="10"/>
                <Button Content="Room Management" Command="{Binding ShowRoomManagementCommand}" Margin="10"/>
                <Button Content="Report Statistics" Command="{Binding ShowReportCommand}" Margin="10"/>
            </StackPanel>

            <Button Grid.Row="1" Content="Logout" 
                    Command="{Binding LogoutCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Margin="10" VerticalAlignment="Bottom"/>
        </Grid>

        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" Margin="10"/>
    </Grid>
</Window>