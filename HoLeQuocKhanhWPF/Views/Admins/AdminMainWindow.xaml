<Window x:Class="HoLeQuocKhanhWPF.Views.Admins.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="{StaticResource SecondaryBrush}">
            <Button Content="Customer Management" Command="{Binding ShowCustomerManagementCommand}" Margin="10"/>
            <Button Content="Room Management" Command="{Binding ShowRoomManagementCommand}" Margin="10"/>
            <Button Content="Report Statistics" Command="{Binding ShowReportCommand}" Margin="10"/>
        </StackPanel>

        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" Margin="10"/>
    </Grid>
</Window>