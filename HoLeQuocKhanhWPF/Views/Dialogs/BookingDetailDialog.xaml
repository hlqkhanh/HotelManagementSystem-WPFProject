<Window x:Class="HoLeQuocKhanhWPF.Views.Dialogs.BookingDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking Details" Height="350" Width="600" WindowStartupLocation="CenterScreen"
        Background="{StaticResource SecondaryBrush}" WindowStyle="SingleBorderWindow" ResizeMode="CanResizeWithGrip">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Booking Details 📜" FontSize="20" FontWeight="SemiBold"
                   Foreground="{StaticResource DarkBrush}" Margin="0,0,0,10"/>

        <DataGrid Grid.Row="2" ItemsSource="{Binding BookingDetails}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Room Number" Binding="{Binding RoomInformation.RoomNumber}" Width="Auto"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='dd/MM/yyyy'}" Width="Auto"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='dd/MM/yyyy'}" Width="Auto"/>
                <DataGridTextColumn Header="Price" Binding="{Binding ActualPrice, StringFormat=C}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>