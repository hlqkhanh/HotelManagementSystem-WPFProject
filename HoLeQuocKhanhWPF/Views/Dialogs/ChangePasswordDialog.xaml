<Window x:Class="HoLeQuocKhanhWPF.Views.Dialogs.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height">
    <Grid Margin="15">
        <StackPanel>
            <Label Content="Current Password:"/>
            <PasswordBox Name="CurrentPasswordBox"/>

            <Label Content="New Password:" Margin="0,10,0,0"/>
            <PasswordBox Name="NewPasswordBox"/>

            <Label Content="Confirm New Password:" Margin="0,10,0,0"/>
            <PasswordBox Name="ConfirmPasswordBox"/>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Save">
                    <Button.CommandParameter>
                        <MultiBinding Converter="{StaticResource PasswordBoxesConverter}">
                            <Binding ElementName="CurrentPasswordBox"/>
                            <Binding ElementName="NewPasswordBox"/>
                            <Binding ElementName="ConfirmPasswordBox"/>
                        </MultiBinding>
                    </Button.CommandParameter>
                    <Button.Command>
                        <Binding Path="SavePasswordCommand"/>
                    </Button.Command>
                </Button>
                <Button Content="Cancel" IsCancel="True" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>